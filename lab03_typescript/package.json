{
    "name": "lab03_typescript",
    "version": "1.0.0",
    "description": "Lab03 - TypeScript port of lab02 CRUD",
    "main": "dist/server.js",
    "scripts": {
        "build": "tsc",
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "start": "node dist/server.js",
        "seed": "ts-node src/seed/seedRolesPositions.ts",
        "check:uploads": "git ls-files -- public/uploads || true",
        "untrack:uploads": "git rm -r --cached public/uploads || true"
    },
    "type": "commonjs",
    "dependencies": {
        "bcryptjs": "^3.0.3",
        "body-parser": "^2.2.0",
        "dotenv": "^17.2.3",
        "ejs": "^3.1.10",
        "express": "^4.18.2",
        "mongoose": "^8.19.3",
        "multer": "^1.4.5-lts.1"
    },
    "devDependencies": {
        "ts-node": "^10.9.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.5.2",
        "@types/express": "^4.17.21",
        "@types/node": "^20.3.1",
        "@types/mongoose": "^5.11.97",
        "@types/bcryptjs": "^2.4.2",
        "@types/multer": "^1.4.7"
    }
}